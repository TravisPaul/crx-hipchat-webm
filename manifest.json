{
    "name": "__MSG_name__",
    "version": "1.1.0",
    "manifest_version": 2,
    "description": "__MSG_description__",
    "default_locale": "en",
    "manifest_version": 2,
    "icons": { "48": "img/48.png",
               "128": "img/128.png"},
    "permissions" : [
        "https://*.hipchat.com/*",
        "storage"
    ],
    "offline_enabled": true,
    "content_scripts": [{
        "matches": ["https://*.hipchat.com/*"],
        "js": ["global.js", "content_script.js"]
    }],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    }
}
